{
  "name": "expintek-workspace",
  "version": "1.0.0",
  "description": "Expintek workspace for staffs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --mac --win --linux"
  },
  "author": "Coolest Bomb",
  "email": "app@expintek.com",
  "license": "ISC",
  "dependencies": {
    "@electron/notarize": "^2.3.2",
    "electron-log": "^5.1.5",
    "electron-updater": "^6.3.9",
    "glob": "^11.0.0",
    "simplebar": "^6.2.7"
  },
  "devDependencies": {
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Expintekuser/workspace.git"
  },
  "publish": [
    {
      "provider": "github",
      "owner": "Expintekuser",
      "repo": "workspace",
      "token": "GITHUB_TOKEN_ENV_VAR",
      "releaseType": "release"
    }
  ],
  "build": {
    "appId": "com.expintek.workspace",
    "productName": "Expintek Workspace",
    "compression": "maximum",
    "directories": {
      "output": "dist"
    },
    "generateUpdatesFilesForAllChannels": true,
    "files": [
      "main.js",
      "menu.js",
      "preload.js",
      "package.json",
      "build/**/*"
    ],
    "asar": true,
    "mac": {
      "icon": "build/logo.icns",
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "win": {
      "icon": "build/logo.ico",
      "target": [
        "nsis"
      ],
      "publisherName": "Coolest movement Network"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Expintek Workspace"
    },
    "linux": {
      "icon": "build/logo.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
