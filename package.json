{
  "name": "expintek-workspace",
  "version": "1.0.0",
  "description": "Expintek workspace for staffs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --mac --win --linux"
  },
  "author": "Coolest Bomb",
  "license": "ISC",
  "dependencies": {
    "@electron/notarize": "^2.3.2",
    "electron-log": "^5.1.5",
    "electron-updater": "^6.2.1",
    "simplebar": "^6.2.7"
  },
  "devDependencies": {
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Expintekuser/workspace.git"
  },
  "publish": [
    {
      "provider": "github",
      "owner": "Expintekuser",
      "repo": "workspace",
      "token": "${GITHUB_TOKEN}"
    }
  ],
  "build": {
    "appId": "com.expintek.workspace",
    "productName": "Expintek Workspace",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "menu.js",
      "package.json"
    ],
    "mac": {
      "icon": "build/logo.icns",
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "gatekeeperAssess": false
    },
   "win": {
  "icon": "build/logo.ico",
  "target": [
    "nsis"
  ],
  "publisherName": "Coolest movement Network"
},
"nsis": {
  "oneClick": false,
  "perMachine": true,
  "allowElevation": true,
  "allowToChangeInstallationDirectory": true,
  "createDesktopShortcut": true,
  "createStartMenuShortcut": true,
  "shortcutName": "Expintek Workspace"
},
    "linux": {
      "icon": "build/logo.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
